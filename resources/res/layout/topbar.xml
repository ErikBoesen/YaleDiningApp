    <ImageView android:gravity="center" android:id="@+id/title1" android:visibility="gone" android:layout_width="@dimen/topbar_title1_layout_width" android:layout_height="wrap_content" android:src="@drawable/yale_dining" android:maxWidth="@dimen/topbar_title1_maxWidth" android:layout_weight="5" android:layout_toLeftOf="@+id/star" android:layout_toRightOf="@+id/refresh" android:layout_centerHorizontal="true"/>
    <Button android:textSize="@dimen/topbar_star_textSize" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/star" android:background="@drawable/top_button" android:layout_width="@dimen/topbar_star_layout_width" android:layout_height="@dimen/topbar_star_layout_height" android:singleLine="true"/>
</LinearLayout>
